header.main-header(role="banner")
	// Название
	div.header-group(role="generic")
		p.site-title
			|[(site_name)]
		p.site-description
			|[(site_description)]
		// Поиск
		div#search(role="search")
			form#search-form(action="/search/" method="GET" role="form")
				input.bvi-no-styles(type="text" name="text" value="[!$_GET['text']!]" placeholder="Поиск" required="required" role="textbox")
	include eya.pug
	|<@IF:[(site_photogallery_show:is(0))]>
	|<@IF:[*id:is(1)*]>
	// Карусель
	|[[multiTV? &fromJson=`[(site_photogallery)]` &tvName=`site_photogallery` &display=`all`]]
	|<@ENDIF>
	|<@ELSE>
	// Карусель
	|[[multiTV? &fromJson=`[(site_photogallery)]` &tvName=`site_photogallery` &display=`all`]]
	|<@ENDIF>
	// Меню 2
	|{{@FILE assets/templates/projectsoft/tpl/menu.html}}
	|<@IF:[(site_gosuslugi_show:is(0))]>
	|<@IF:[*id:is(1)*]>
	// Госуслуги
	|{{@FILE assets/templates/projectsoft/tpl/gosuslugi.html}}
	|<@ENDIF>
	|<@ELSE>
	// Госуслуги
