article.news-card.container
	.news-container
		.news-container-item
			h4.title
				|<a href="[+url+]" [+link_attributes+]>
				|	[+title+]
				|</a>
			p.date.text-right
				span.icon-calendar
				span
					|[+out_date+]
			.news-container-item-description
				p.photo
					|<a href="[+url+]" [+link_attributes+]>
					|	<img src="[[phpthumb? &input=`[+imageSoc+]` &options=`w=751,h=422,zc=C`]]" alt="[+alt+]">
					|	<span class="bvi-caption-alt">[+alt+]</span>
					|</a>
				p.text
					span.text-wrapper
						|[+introtext:nl2br+]
					|<a class="btn btn-danger more bvi-no-styles" href="[+url+]" [+link_attributes+]>
					|	Подробнее
					|</a>